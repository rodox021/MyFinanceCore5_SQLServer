@model MyFinanceCore5_SQLServer.Models.Entity.PictureIcon

@{
    ViewData["Title"] = "Novo Icone";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class=" text d-md-flex flex-row">
    <div class="align-items-center" style="min-width:250px;">
        <div class="d-flex justify-content-center align-items-center h-100">
            <i id="img-icone"> </i>
        </div>
    </div>
    <div class="col-md-8">
        <div>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <label asp-for="Name" class="control-label"></label>
                    <div>

                        <input asp-for="Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IconClass" class="control-label"></label>
                    <input asp-for="IconClass" class="form-control" />
                    <span asp-validation-for="IconClass" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="Create" class="btn btn-success"><i class="fas fa-save"></i> Salvar</button>
                    <a class="btn btn-outline-info" onclick="window.history.back()"><i class="fa fa-arrow-left"></i> Voltar</a>
                </div>
            </form>
        </div>
    </div>

</div>


@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
        <script>
            $(document).ready(function () {
                $("#img-icone").addClass($("#img-icone").hasClass ? "fa fa-question-circle fa-4x" : $("#IconClass").val())

            })

            //$("#ProfilePictureURL").on("change", function () {
            //    var output = document.getElementById('ProfilePicturePreview');
            //    output.src = $(this).val();

            //})

            $("#IconClass").on("change", changeIMG)

            function changeIMG() {
                var out = document.getElementById('title');

                $("#img-icone").removeClass();
                /* out.innerHTML = $(this).val();*/
                $("#img-icone").addClass($(this).val() + " fa-4x");


            }
        </script>
   
   }