@model IEnumerable<MyFinanceCore5_SQLServer.Models.Entity.TypeFixedBill>

@{
    ViewData["Title"] = "Tipo de Conta Fixa";
}


<h2>@ViewData["Title"]</h2>
<hr />
<div class="container-fluid mb-2">
    <a class="btn btn-outline-primary" asp-action="Create">
        Novo
    </a>
</div>
<div class="container-fluid">
    <table class="table table-hover">
        <thead class="thead-dark text-center">
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>

                <th>
                    Ações
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                      @item.Name.ToUpper()
                    </td>

                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-router.id="@item.Id">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a class="btn btn-info" asp-action="Details" asp-router.id="@item.Id">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-router.id="@item.Id">
                            <i class="fa fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

