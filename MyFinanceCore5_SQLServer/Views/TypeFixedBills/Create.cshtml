@model MyFinanceCore5_SQLServer.Models.Entity.TypeFixedBill

@{
    ViewData["Title"] = "Novo Tipo de conta fixa";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class=" text d-md-flex flex-row">

    <div class="col-md-8">
        <div>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserID" value="1" />
                <div class="form-group">

                    <label asp-for="Name" class="control-label"></label>
                    <div>

                        <input asp-for="Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" value="Create" class="btn btn-success"><i class="fas fa-save"></i> Salvar</button>
                    <a class="btn btn-outline-info" onclick="window.history.back()"><i class="fa fa-arrow-left"></i> Voltar</a>
                </div>
            </form>
        </div>
    </div>

</div>



